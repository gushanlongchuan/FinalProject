html
  head
    title=title
    link(
      href='//netdna.bootstrapcdn.com/bootstrap/3.1.1/css/bootstrap.min.css',
      rel='stylesheet'
    )
  body
    div.container

      div.page-header
        h1 New post

      if errors
        each error in errors
          div.alert.alert-danger
            span #{error.error}
      if saved
        div.alert.alert-success
          span Your item has been posted
      form.form-horizontal(method='post', role='form', enctype='multipart/form-data')
        input(name='_csrf', type='hidden', value=csrfToken)

        div.form-group
          label.col-sm-4 Title of your post
          div.col-sm-8
            input.form-control(
              placeholder='Give a short and nice title',
              required=true,
              name='title',
              type='text')
        div.form-group
          label.col-sm-4 Description of the item
          div.col-sm-8
            textarea.form-control(
              placeholder='Describe your item',
              required=true,
              name='description',
              type='text')
        div.form-group
          label.col-sm-4 Price
          div.col-sm-8
            input.form-control(
              placeholder='Give a reasonable price',
              required=true,
              name='price',
              type='number')
        div.form-group
          label.col-sm-4 Pictures
          div.col-sm-8
            input.form-control(
              required=true,
              name='image',
              type='file')
        div.form-group
          div.col-sm-offset-4.col-sm-8
            button.login.btn.btn-primary(type='submit') Post your item!
        div.pull-right
          a(href="/") Return to home page