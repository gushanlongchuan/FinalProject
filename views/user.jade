
include mixins/user_function
extends ./layout.jade
block title
	title=title
block content
	div.container
		div.container(style="width:600px;height:150px")
			div.col-md-6(align="center",style="padding-left: 0px;")
				div.page-header(style="margin-top:10px")
				if User_pic
					img.img-circle(src='../'+User_pic+'?dim=60x60')
				else
					img.img-circle(src='../images/default_profile.jpg'+'?dim=60x60')
				h5 #{user.fullName}

			div.col-md-6(align="left")
				div.page-header(style="margin-top:20px;")
				div.container(style="width:250px;")
					div.col-md-4(align="center")
						p posts
						h5 #{posts}
					div.col-md-4(align="center")
						p followers
						h5 #{followers}
					div.col-md-4(align="center")
						p following
						h5 #{following}
				div.container(style="width:220px;height:20px;background-color:#D3D3CF;",align = "center")
					a(href="/profile", style="text-decoration:none;width:300px;") edit your profile     
		div.container
			if user
				if result
					for each in result
						+user_function(each,following,followers,posts)

			else
				p
					Welcome to my app, ready to get started?
				p 
					a.btn.btn-primary(href="/login") Login now
				p
					span.small Don't have an account?
					span &nbsp;
					a.small(href="/register") Register now
