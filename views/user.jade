
include mixins/user_function
extends ./layout.jade
block title
	title=title
block content
	div.container
		div.container(style="width:600px;height:150px")
			div.col-md-6(align="center")
				div.page-header(style="margin-top:10px")
				img.img-circle(src='../'+User_pic+'?dim=60x60')
				h5 #{user.fullName}

			div.col-md-6(align="left")
				div.page-header(style="margin-top:20px")
				div.col-md-4(align="center")
					p posts
					h5 #{posts}
				div.col-md-4(align="center")
					p followers
					h5 #{followers}
				div.col-md-4(align="center")
					p following
					h5 #{following}
				
		div.container
			if user
				if result
					for each in result
						+user_function(each)

			else
				p
					Welcome to my app, ready to get started?
				p 
					a.btn.btn-primary(href="/login") Login now
				p
					span.small Don't have an account?
					span &nbsp;
					a.small(href="/register") Register now
